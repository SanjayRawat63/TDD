package io.plaindromechecker;

public class PlaindromeChecker {
         public boolean isPlaindrome(String str)
         {
        	 str=str.toLowerCase();
        	 int start=0;
        	 int end=str.length()-1;
        	 while(start<=end)
        	 {
        		 if(str.charAt(start)!=str.charAt(end))
        			 return false;
        		 start++;
        		 end--;
        	 }
        	 return true;
         }
}
